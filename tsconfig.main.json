{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/core/**/*",
    "src/services/**/*",
    "src/main/**/*",
    "src/index.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/renderer/**/*"]
}
